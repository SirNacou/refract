# Application Configuration
VITE_APP_TITLE="Refract - URL Shortener"

# API Configuration
VITE_API_BASE_URL=http://localhost:8080

# Zitadel OIDC Configuration
# Your Zitadel instance URL (e.g., https://your-instance.zitadel.cloud or your self-hosted domain)
VITE_ZITADEL_ISSUER=https://your-zitadel-instance.zitadel.cloud

# Client ID from your Zitadel application (create one in Zitadel console if you haven't)
VITE_ZITADEL_CLIENT_ID=your-client-id-here

# Redirect URI after successful login (must match Zitadel app config)
VITE_ZITADEL_REDIRECT_URI=http://localhost:3000/auth/callback

# Optional: Where to redirect after logout (defaults to root if not set)
VITE_ZITADEL_POST_LOGOUT_REDIRECT_URI=http://localhost:3000
