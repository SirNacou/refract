# Database Configuration
DB_NAME=refract
DB_USER=postgres
DB_PASSWORD=postgres
DB_PORT=5432

# Valkey Configuration
VALKEY_HOST=localhost
VALKEY_PORT=6379
VALKEY_PASSWORD=changeme
VALKEY_DB=0
VALKEY_MAX_MEMORY=256mb

# L1 Cache Configuration (Moka in-memory cache per redirector instance)
L1_CACHE_MAX_CAPACITY=10000
L1_CACHE_TTL_SECONDS=60

# API Service
API_PORT=8080

# Redirector Service
REDIRECTOR_PORT=8081

# Application Settings
SQIDS_ALPHABET=abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789
SQIDS_MIN_LENGTH=6

# Snowflake ID Configuration
SNOWFLAKE_NODE_ID=0

# Domain Configuration
ALLOWED_DOMAINS=short.link,s.link,refract.io
DEFAULT_DOMAIN=short.link

# CORS Configuration (comma-separated origins for local development)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
